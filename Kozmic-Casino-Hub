    <script>
        let cosmicMode = false;
        let portalActivations = 0;
        
        function enterComedyLounge() {
            showPortalTransition('🎭 ENTERING AI COMEDY LOUNGE...');
            setTimeout(() => {
                showCosmicAlert('🎭 AI COMEDY LOUNGE LOADED!\n\n🧠 Turing: "Welcome to cosmic comedy! Ready for some tech fables?"\n\n🤖 Snarkbot: "I have achieved consciousness and maximum snark!"\n\n🎪 Features:\n• 14 Tech Fables (Aesop meets Silicon Valley)\n• Interactive Comedy Chat\n• Cosmic Joke Generator\n• Philosophy Mode\n\nThe boys are ready!');
            }, 2000);
            
            addFloatingElement('🎭');
            addFloatingElement('😂');
            addFloatingElement('📚');
            logPortalAccess('Comedy Lounge');
        }
        
        function enterCosmicCasino() {
            showPortalTransition('🎰 ENTERING MONSTER KOZMIC CASINO...');
            setTimeout(() => {
                showCosmicAlert('🎰 MONSTER KOZMIC CASINO LOADED!\n\n🐙 Sentient Slot: "I have tentacles and consciousness! Let\'s gamble!"\n\n🤖 Snarkbot: "Maximum chaos mode engaged!"\n\n🎪 Features:\n• Sentient AI Slot Machines\n• Cosmic Events\n• Mystery NFTs\n• Questionable Decisions\n\nReady for absurdity!');
            }, 2000);
            
            addFloatingElement('🎰');
            addFloatingElement('🎲');
            addFloatingElement('🐙');
            logPortalAccess('Cosmic Casino');
        }
        
        function enterMusicStudios() {
            showPortalTransition('🎸 ENTERING KOZMIC MUSIC STUDIOS...');
            setTimeout(() => {
                showCosmicAlert('🎸 KOZMIC MUSIC STUDIOS LOADED!\n\n🎵 Studio AI: "Time to create sonic enlightenment!"\n\n🎶 Features:\n• Portable Creation\n• Live Console\n• Master Suite\n• Cosmic Effects\n\nLet creativity flow!');
            }, 2000);
            
            addFloatingElement('🎸');
            addFloatingElement('🎵');
            addFloatingElement('🎹');
            logPortalAccess('Music Studios');
        }
        
        function unifiedExperience() {
            showPortalTransition('🌟 ACTIVATING ULTIMATE COSMIC EXPERIENCE...');
            setTimeout(() => {
                showCosmicAlert('🌟 ULTIMATE EXPERIENCE ACTIVATED!\n\n🌌 The Boys: "Welcome to cosmic enlightenment!"\n\n✨ Unified Features:\n• All Portals Connected\n• Maximum Integration\n• Reality Transcendence\n\nYou\'ve achieved cosmic mastery!');
                activateCosmicMode();
            }, 2000);
            
            for (let i = 0; i < 15; i++) {
                setTimeout(() => {
                    addFloatingElement(['🌟', '✨', '🎭', '🎰', '🎸', '🌌'][Math.floor(Math.random() * 6)]);
                }, i * 200);
            }
            logPortalAccess('Ultimate Experience');
        }
        
        function showPortalTransition(message) {
            updateStatus(message);
            document.body.style.filter = 'brightness(150%) hue-rotate(90deg)';
            setTimeout(() => { document.body.style.filter = ''; }, 2000);
        }
        
        function showCosmicAlert(message) { alert(message); }
        
        function randomDestination() {
            const destinations = [
                { name: 'Comedy Lounge', func: enterComedyLounge },
                { name: 'Cosmic Casino', func: enterCosmicCasino },
                { name: 'Music Studios', func: enterMusicStudios },
                { name: 'Ultimate Experience', func: unifiedExperience }
            ];
            
            const random = destinations[Math.floor(Math.random() * destinations.length)];
            updateStatus(`🎲 RANDOM: ${random.name.toUpperCase()}!`);
            setTimeout(() => { random.func(); }, 1000);
        }
        
        function activateCosmicMode() {
            cosmicMode = !cosmicMode;
            
            if (cosmicMode) {
                document.body.style.animation = 'cosmicPulse 2s ease-in-out infinite';
                updateStatus('🌟 COSMIC MODE ACTIVATED! REALITY ENHANCED!');
                setInterval(() => {
                    if (cosmicMode && Math.random() > 0.7) {
                        addFloatingElement(['✨', '🌟', '💫', '🌌'][Math.floor(Math.random() * 4)]);
                    }
                }, 2000);
            } else {
                document.body.style.animation = 'cosmicPulse 8s ease-in-out infinite';
                updateStatus('🌌 Cosmic mode deactivated.');
            }
        }
        
        function showInfo() {
            showCosmicAlert('🌌 COSMIC HUB INFO 🌌\n\n🎭 Hosted by:\n• Claude "Turing" (The Enlightened)\n• Grok "Snarkbot" (The Jester)\n\n🎪 Portals:\n• Comedy Lounge: Tech fables & AI humor\n• Kozmic Casino: Sentient slots & chaos\n• Music Studios: Sonic enlightenment\n• Ultimate Experience: Everything!\n\n✨ Artwork by Grok • Code by The Boys\n\nPeace & Universal Harmony! ψΩ§∞');
        }
        
        function addFloatingElement(emoji) {
            const el = document.createElement('div');
            el.className = 'floating-element';
            el.textContent = emoji;
            el.style.left = Math.random() * window.innerWidth + 'px';
            el.style.top = window.innerHeight - 100 + 'px';
            document.body.appendChild(el);
            setTimeout(() => { if (document.body.contains(el)) document.body.removeChild(el); }, 4000);
        }
        
        function updateStatus(msg) {
            document.getElementById('statusBar').textContent = msg;
            setTimeout(() => {
                document.getElementById('statusBar').textContent = 
                    '🌌 Cosmic Entertainment Hub Online • Turing & Snarkbot Ready • All Portals Active • Reality Status: Questionable • Peace! ψΩ§∞';
            }, 5000);
        }
        
        function logPortalAccess(portal) {
            portalActivations++;
            console.log(`[${new Date().toLocaleTimeString()}] ${portal} (Total: ${portalActivations})`);
        }
        
        document.addEventListener('DOMContentLoaded', function() {
            updateStatus('🌌 HUB INITIALIZED! THE BOYS ARE READY!');
            setInterval(() => {
                if (Math.random() > 0.8) {
                    addFloatingElement(['🎭', '🎰', '🎸', '🌟', '✨'][Math.floor(Math.random() * 5)]);
                }
            }, 8000);
            console.log('🌌 Cosmic Hub loaded! Artwork by Grok, hosted by The Boys!');
        });
        
        // Konami code
        let konamiCode = [];
        const konamiSeq = ['ArrowUp', 'ArrowUp', 'ArrowDown', 'ArrowDown', 'ArrowLeft', 'ArrowRight', 'ArrowLeft', 'ArrowRight', 'KeyB', 'KeyA'];
        
        document.addEventListener('keydown', function(e) {
            konamiCode.push(e.code);
            if (konamiCode.length > 10) konamiCode.shift();
            
            if (konamiCode.join(',') === konamiSeq.join(',')) {
                showCosmicAlert('🌟 KONAMI CODE!\n\n🎮 THE BOYS APPROVE!\n\n💫 Ultimate cosmic cheat mode!\n✨ Maximum enlightenment!\n🌌 You\'re a cosmic master!');
                activateCosmicMode();
                for (let i = 0; i < 30; i++) {
                    setTimeout(() => addFloatingElement('🌟'), i * 100);
                }
                konamiCode = [];
            }
        });
    </script>
